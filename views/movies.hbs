<div><h1>Ironhack Cinema</h1>
<h2>Click on the movie to check the showtimes</h2>
</div>


<div class="row row-cols-3 row-cols-md-3 g-4">
    {{#each movies }}
        <div class="col mt-3 mb-3 text-center">
            <div class="bg-secondary pt-5 pb-5">
            <div>
                <img src="{{image}}" alt="{{title}}">
        </div>
        <div>
            <a href="/movie/{{id}}" class="btn-primary btn-lg btn-rounded">See more</a>
        </div>
        </div>
            </div>
    {{/each}}
</div>
